@model EATurnerDataService.ServiceModel.Movie
@{
    <h2>@Model.Titles.First().TitleName</h2>
    <hr />
    <h4>Plot Synopsis</h4>
    <p>@Model.StoryLines.First().Description</p>
    <br />
    <br />

    <h4>Actors</h4>
    <br />

    <table class="table table-responsive table-condensed table-hover">
        <tr>
            <td style="font-weight:bold">
                Actor
            </td>
            <td>
                Type
            </td>
        </tr>
        @foreach (var actor in Model.Actors)
        {
        <tr>
            <td>
                <b>@actor.ParticipantName</b>
            </td>
            <td>
                 @actor.ParticipantType
             </td>
        </tr>
        }
    </table>
    <br />
    <br />


    <h4>Awards</h4>
    <br />

    <table class="table table-responsive table-condensed table-hover">
        <tr>
            <td>
                Award
            </td>
            <td>
                Company
            </td>
            <td>
                Year
            </td>
            <td>
                Status
            </td>
        </tr>
        @foreach (var award in Model.Awards)
        {
            <tr>
                <td>
                    <b>@award.AwardName</b>
                </td>
                <td>
                    @award.AwardCompany
                </td>
                <td>
                    @award.AwardTime.Year
                </td>
                @if (award.AwardWon)
                {
                    <td>
                        <b style="color:green">Won</b>
                    </td>
                }
                else
                {
                    <td>
                    <b style="color:red">Nominated</b>
                    </td>
                }
            </tr>
        }
    </table>
    <br />
    <br />

}